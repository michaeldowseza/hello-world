{
  "compilerOptions": {
    "outDir": "lib/esm",
    "target": "es5",
    "lib": ["es6", "es2016", "es2017"],
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
